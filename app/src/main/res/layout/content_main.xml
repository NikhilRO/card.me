<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.harrydong.cardme.MainActivity"
    tools:showIn="@layout/activity_main">


        //harry
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="-8dp"
                    android:layout_toEndOf="@+id/textView"
                    android:paddingBottom="1pt"
                    android:text="NAME"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/CELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/NAME"
                    android:layout_below="@+id/NAME"
                    android:text="Cell"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/EMAIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/CELL"
                    android:layout_below="@+id/CELL"
                    android:text="Email"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/NAME"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/NAME"
                    android:text="Met at LinkedIn Meetup"
                    android:textSize="9sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/DATE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/location"
                    android:layout_marginTop="10dp"
                    android:layout_alignLeft="@+id/location"
                    android:text="Nov 29, 2017"
                    android:textSize="9sp"
                    android:textStyle="italic" />


                <ImageView
                    android:id="@+id/face"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    card_view:srcCompat="@drawable/harry" />

                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/NAME"
                    android:layout_marginBottom="15dp"
                    card_view:srcCompat="@drawable/linkedin" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignTop="@+id/linkedin"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/linkedin"
                    card_view:srcCompat="@drawable/instagram" />

                <ImageView
                    android:id="@+id/github"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignTop="@+id/instagram"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/instagram"
                    card_view:srcCompat="@drawable/github" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignTop="@+id/github"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/github"
                    card_view:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/snapchat"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignTop="@+id/facebook"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/facebook"
                    card_view:srcCompat="@drawable/snapchat" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

